extends ../layout

block content
    .form-container
        h1 New
            span.secondary-color  Message
        .intro-text
            span Hi,
                span.secondary-color  #{currentUser.first_name}

            span What's on
                span.secondary-color  your
                |  mind?

        form(action="" method="POST")
            if errors
                ul
                    for error in errors
                        li(class="error")= error.msg
            label(for="title") Title
            input(name="title" placeholder="Title" type="text")
            label(for="message") Message
            textarea(name="message" cols="30" rows="10" placeholder="Your Message Here...")

            button(type="submit" class="secondary-bg-color") Submit
