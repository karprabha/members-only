doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/styles/style.css')
        title= title
    body
        .error-page
            h1= message
            h2= error.status

            a(href="/")
                button(type="button" class="primary-bg-color") Go Home

            pre #{error.stack}